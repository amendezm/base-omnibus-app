{% extends 'index.html.twig' %} {% block contenido%}
<br />
{{ form_start(edit_form, { method: "POST" }) }}
<div class="card">
  <div class="card-header">
    <div class="col-md-8 offset-md-2">
      <h3>Editar Chofer</h3>
    </div>
  </div>
  <div class="card-body">
    <div class="col-md-8 offset-md-2">
      <div class="form-group">
        <label class="col-sm-4 control-label">Nombre</label>
        {{ form_widget(edit_form.nombre, 
                {'attr' : {'class' : 'form-control datepicker-here' }}
        )}}
      </div>
      <div class="form-group">
        <label class="col-sm-4 control-label">Licencia Operativa</label>
        {{ form_widget(edit_form.noLicenciaOperativa, 
                {'attr' : {'class' : 'form-control datepicker-here'}}
        )}}
      </div>
      <div class="form-group">
        <label class="col-sm-4 control-label">Ómibus</label>
        {{ form_widget(edit_form.omnibus, 
            {'attr' : {'class' : 'form-control datepicker-here'}}
        )}}
      </div>
      <div class="form-row">
        <div class="col">
          <div class="form-group">
            <label class="control-label">LC Emitida</label>
            {{ form_widget(edit_form.licencia_emision, 
                    {'attr' : {'class' : 'form-control datepicker-here'}}
            )}}
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label class="control-label">LC Vence</label>
            {{ form_widget(edit_form.licencia_vencimiento,
                    {'attr' : {'class' : 'form-control datepicker-here'}}
            )}}
          </div>
        </div>
      </div>
      <div class="form-row">
        <div class="col">
          <div class="form-group">
            <label class="control-label">Recalificación Emitida</label>
            {{ form_widget(edit_form.recalificacion_emision,
                     {'attr' : {'class' : 'form-control datepicker-here'}}
            )}}
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label class="control-label">Recalificación Vence</label>
            {{ form_widget(edit_form.recalificacionVencimiento, 
                    {'attr' : {'class' : 'form-control datepicker-here'}}
            )}}
          </div>
        </div>
      </div>
      <div class="form-row">
        <div class="col">
          <div class="form-group">
            <label class="control-label">Examen Médico Emitido</label>
            {{ form_widget(edit_form.examenMedicoEmision, 
                    {'attr' : {'class' : 'form-control datepicker-here'}}
            )}}
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label class="control-label">Examen Médico Vence</label>
            {{ form_widget(edit_form.examenMedicoVencimiento,
                     {'attr' : {'class' : 'form-control datepicker-here'}}
            )}}
          </div>
        </div>
      </div>
      <div class="form-row">
        <div class="col">
          <div class="form-group">
            <label class="control-label">Examen Psicofisiológico Emitido</label>
            {{ form_widget(edit_form.examenPsicofisiologicoEmision, 
                    {'attr' : {'class' : 'form-control datepicker-here'}}
            )}}
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label class="control-label">Examen Psicofisiológico Vence</label>
            {{ form_widget(edit_form.examenPsicofisiologicoVencimiento, 
                    {'attr' : {'class' : 'form-control datepicker-here','data-language':'es'}}
            )}}
          </div>
        </div>
      </div>
      <br />
      <div class="text-right">
        <a class="btn btn-outline-secondary" href="{{ path('chofer_index') }}">
          Cancelar
        </a>
        <button class="btn btn-primary" type="submit">Guardar</button>
      </div>
    </div>
  </div>
  <br />
  {{ form_end(edit_form) }}
</div>
{% endblock %}
