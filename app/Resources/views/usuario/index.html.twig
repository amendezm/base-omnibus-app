{% extends 'index.html.twig' %} {% block contenido%}
<br />
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <h3 class="m-0 font-weight-bold text-primary">Usuarios</h3>
      </div>
      <div class="col-sm-12 col-md-6 text-right">
        {% if not is_granted('ROLE_USUARIO' ) %}
        <a
          class="btn btn-sm btn-default  pull-left"
          data-toggle="tooltip"
          data-placement="top"
          href="{{ path('usuario_new') }}"
          title="Nuevo Usuario"
        >
          <img
            src="{{ asset('assets/dist/img/add_database_26px.png') }}"
            alt="User Image"
          />
          Nuevo
        </a>
        {% endif %}
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="table-reponsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th class="text-center">Activo</th>
            <th class="text-center">Usuario</th>
            <th class="text-center">Fecha-registro</th>
            <th class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {% for usuario in usuarios %}
          <tr>
            <td class="text-center">
              {% if usuario.isActive %}Si{% else %}No{% endif %}
            </td>
            <td class="text-center">{{ usuario.usuario }}</td>
            <td class="text-center">
              {% if usuario.fechaRegistro %}
              {{ usuario.fechaRegistro|date('Y-m-d H:i:s')}}
              {% endif %}
            </td>
            <td class="text-center">
              <div class="row">
                <div class="col-sm-12 col-md-6">
                  <a
                    class="text-dark"
                    onclick="return confirm('Está seguro de realizar esta acción?')"
                    href="{{ path('usuario_delete', { id: usuario.id }) }}"
                    datatype="tooltip"
                    title="Eliminar"
                  >
                    <i class="fas fa-trash-alt"></i>
                    <span>Eliminar</span>
                  </a>
                </div>
                <div class="col-sm-12 col-md-6">
                  <a
                    href="{{ path('usuario_edit', { id: usuario.id }) }}"
                    title="Editar"
                  >
                    <i class="fas fa-edit"></i>
                    <span>Editar</span>
                  </a>
                </div>
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
