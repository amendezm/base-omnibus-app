{% extends 'index.html.twig' %} {% block javascripts %}
{{ parent() }}

<script src="{{ asset('assets/dist/js/deleteBase.js') }}"></script>
{% endblock javascripts %} {% block contenido%}
<br />
<!-- Default box -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <h3 class="m-0 text-primary">Bases</h3>
      </div>
      <div class="col-sm-12 col-md-6 text-right">
        {% if not is_granted('ROLE_USUARIO' ) %}
        <a
          class="btn btn-sm btn-default  pull-left"
          href="{{ path('base_new') }}"
        >
          <img
            src="{{ asset('assets/dist/img/add_database_26px.png') }}"
            alt="User Image"
          />
          Nuevo
        </a>
        {% endif %}
      </div>
    </div>
  </div>
  <!-- /.box-header -->
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table"
        id="dataTable"
        width="100%"
        cellspacing="0"
        style="font-size:0.85rem"
      >
        <thead>
          <th>Nombre</th>
          <th>Descripción</th>
          <th>Dirección</th>
          {% if not is_granted('ROLE_USUARIO' ) %}
          <th>
            Acciones
          </th>
          {% endif %}
        </thead>
        <tbody>
          {% for base in bases %}
          <tr>
            <td>{{ base.nombre }}</td>
            <td>{{ base.descripcion }}</td>
            <td>{{ base.direccion }}</td>
            <td>
              <div class="row">
                <div class="col-md-3 offset-md-1 text-center">
                  <a
                    class="text-secondary"
                    href="#"
                    rol="button"
                    data-toggle="modal"
                    data-target="#modalConfirmDelete-{{ base.id }}"
                    data-tooltip="Eliminar"
                    data-tooltip-location="top"
                  >
                    <i class="fas fa-trash-alt"></i>
                  </a>
                  {% include "commons/confirmDeleteModal.html.twig" with
                  {'instanceToDelete': base, 'path':'base_delete'} %}
                </div>
                <div class="col-md-3 text-center">
                  <a
                    href="{{ path('base_edit', { id: base.id }) }}"
                    data-tooltip="Editar"
                    data-tooltip="top"
                    ><i class="fas fa-edit"></i>
                  </a>
                </div>
              </div>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  <!-- /.box-body -->
</div>
<!-- /.box -->
{% endblock %}
