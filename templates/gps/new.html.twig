{% extends 'index.html.twig' %} {% block contenido %}
<br />
{{ form_start(form, { method: "POST" }) }}
<div class="card shadow">
  <div class="card-header">
    <div class="col-md-8 offset-md-2">
      <h3>Nuevo Reporte del GPS</h3>
    </div>
  </div>
  <div class="card-body">
    <div class="col-md-8 offset-md-2">
      <div class="form-group">
        <label class="control-label">Ã“mnibus</label>
        {{ form_widget(form.omnibus, 
                {'attr' : {'class' : 'form-control'}}
        )}}
      </div>
      <div class="form-group">
        <label class="control-label">Combustible (litros)</label>
        {{ form_widget(form.combustible, 
                {'attr' : {'class' : 'form-control','pattern':'([0-9,]+)$' }}
        )}}
      </div>
      <div class="form-group">
        <label class="control-label">Kms Recorridos</label>
        {{ form_widget(form.kmRecorridos, 
                {'attr' : {'class' : 'form-control','pattern':'([0-9,]+)$'}}
        )}}
      </div>
      <div class="form-group">
        <label class="control-label">Fecha</label>
        {{ form_widget(form.fecha, 
                {'attr' : {'class' : 'datepicker-here form-control'}}
        )}}
      </div>
      <br />
      <div class="text-right">
        <a class="btn btn-outline-secondary" href="{{ path('gps_index') }}">
          Cancelar
        </a>
        <input type="submit" class="btn btn-primary" value="Guardar" />
      </div>
      <br />
    </div>
  </div>
  {{ form_end(form) }}
</div>
{% endblock %}
