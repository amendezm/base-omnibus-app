{% extends 'index.html.twig' %} {% block contenido%}
<br />
{{ form_start(edit_form, { method: "POST" }) }}
<div class="col-md-10 offset-md-1" style="font-size: 0.85rem;">
  <div class="card shadow">
    <div class="card-body">
      <br />
      <div class="col-md-8 offset-md-2">
        <h4 class="text-primary">
          Editar Usuario
        </h4>
        <br />
        <div class="">
          {% if error is defined %}
          <div class="alert_error">
            {{ error }}
          </div>
          {% endif %} {% if form_errors(edit_form.usuario) is not empty %}
          <div class="alert_error">
            {{ form_errors(edit_form.usuario) }}
          </div>
          {% endif %}
          <div class="form-group">
            {{ form_label(edit_form.usuario, "Usuario") }}
            {{ form_errors(edit_form.usuario) }}
            {{
              form_widget(edit_form.usuario, {
                attr: { class: "form-control" }
              })
            }}
          </div>
          <div class="form-group">
            {{ form_label(edit_form.password, "Contraseña") }}
            {{ form_errors(edit_form.password) }}

            {{
              form_widget(edit_form.password.first, {
                attr: { class: "form-control", required: "true" }
              })
            }}
          </div>
          <div class="form-group">
            {{ form_label(edit_form.password, "Repetir Contraseña") }}
            {{ form_errors(edit_form.password) }}
            {{
              form_widget(edit_form.password.second, {
                attr: { class: "form-control", required: "true" }
              })
            }}
          </div>
          <div class="form-group">
            {{ form_label(edit_form.roles, "Rol") }}
            {{ form_errors(edit_form.roles) }}
            {{
              form_widget(edit_form.roles, { attr: { class: "form-control" } })
            }}
          </div>
          <div class="form-group">
            <div class="custom-control custom-checkbox">
              {% if usuario.isActive %}
              <input
                type="checkbox"
                class="custom-control-input"
                name="usuario[isActive]"
                id="usuario_isActive"
                checked
                value="1"
              />
              {% else %}
              <input
                type="checkbox"
                class="custom-control-input"
                name="usuario[isActive]"
                id="usuario_isActive"
                value="1"
              />
              {% endif %}
              <label class="custom-control-label" for="usuario_isActive">
                Activo
              </label>
              {{ form_errors(edit_form.isActive) }}
            </div>
            <!-- <div class="cutom-control custom-checkbox">
              {{ form_widget(edit_form.isActive) }}
              <label class="custom-control-label" for="usuario_isActive">
                Activo
              </label>
            </div> -->
          </div>

          {{ form(edit_form) }}

          <div class="text-right">
            <a
              class="btn btn-small btn-outline-secondary"
              href="{{ path('usuario_index') }}"
              ><i class="glyphicon glyphicon-remove"></i> Cancelar</a
            >
            <button class="btn btn-small btn-primary pull-right" type="submit">
              <i class="glyphicon glyphicon-save"></i> Guardar
            </button>
          </div>
        </div>
        <br />
      </div>
    </div>
  </div>
</div>
{{ form_end(edit_form) }}

{% endblock %}
