{% extends 'index.html.twig' %} {% block contenido %}
<br />
{{ form_start(form, { method: "POST" }) }}
<div class="col-md-10 offset-md-1" style="font-size: 0.85rem;">
  <div class="card shadow">
    <div class="card-body">
      <br />
      <div class="col-md-8 offset-md-2">
        <h4 class="text-primary">
          Nuevo Usuario
        </h4>
        <br />
        {% if error is defined %}
        <div class="alert_error">
          {{ error }}
        </div>
        {% endif %} {% if form_errors(form) is not empty %}
        <div class="alert_error">
          {{ form_errors(form) }}
        </div>
        {% endif %}
        <div class="form-group">
          {{ form_label(form.usuario, "Nombre") }}
          {{ form_errors(form.usuario) }}
          {{ form_widget(form.usuario, { attr: { class: "form-control" } }) }}
        </div>
        <div class="form-group">
          {{ form_label(form.password, "Contraseña") }}
          {{ form_errors(form.password) }}

          {{
            form_widget(form.password.first, {
              attr: { class: "form-control", required: "true" }
            })
          }}
        </div>
        <div class="form-group">
          {{ form_label(form.password, "Repetir Contraseña") }}
          {{ form_errors(form.password) }}
          {{
            form_widget(form.password.second, {
              attr: { class: "form-control", required: "true" }
            })
          }}
        </div>
        <div class="form-group">
          {{ form_label(form.roles, "Rol") }}
          {{ form_errors(form.roles) }}
          {{ form_widget(form.roles, { attr: { class: "form-control" } }) }}
        </div>
        <div class="form-group">
          <div
            class="custom-control custom-checkbox"
            style="margin-left: -1.5rem;"
          >
            <div class="checkbox">
              <div class="custom-control custom-checkbox">
                {% if usuario.isActive %}
                <input
                  type="checkbox"
                  class="custom-control-input"
                  name="usuario[isActive]"
                  id="usuario_isActive"
                  checked
                  value="1"
                />
                {% else %}
                <input
                  type="checkbox"
                  class="custom-control-input"
                  name="usuario[isActive]"
                  id="usuario_isActive"
                  value="1"
                />
                {% endif %}
                <label class="custom-control-label" for="usuario_isActive">
                  Activo
                </label>
                {{ form_errors(form.isActive) }}
              </div>
            </div>
            {{ form_errors(form.isActive) }}
          </div>
          <!-- <div class="cutom-control custom-checkbox">
              {{ form_errors(form.isActive) }}
              {{ form_widget(form.isActive) }}
              <label class="custom-control-label" for="usuario_isActive">
                Activo
              </label>
            </div> -->
        </div>

        {{ form(form) }}

        <div class="text-right">
          <a
            class="btn btn-small btn-outline-secondary"
            href="{{ path('usuario_index') }}"
            ><i class="glyphicon glyphicon-remove"></i> Cancelar</a
          >
          <input
            class="btn btn-small btn-primary pull-right"
            type="submit"
            value="Guardar"
          />
        </div>
        <br />
      </div>
    </div>
  </div>
</div>
{{ form_end(form) }}

{% endblock %}
