{% extends 'index.html.twig' %} {% block contenido %}
<br />
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a
      class="nav-link {% if 'ruta_reporte_salidas' in app.request.attributes.get('_route')%}active{% endif %}"
      href="{{ path('ruta_reporte_salidas') }}"
    >
      Diario
    </a>
  </li>
  <li class="nav-item">
    <a
      class="nav-link {% if 'ruta_reporte_acumulado' in app.request.attributes.get('_route') %}active{% endif %}"
      href="{{ path('ruta_reporte_acumulado') }}"
    >
      Acumulado
    </a>
  </li>
</ul>
<br />
{{ form_start(form, { method: "POST" }) }}
<div class="form-inline text-right" style="justify-content: flex-end;">
  <div class="form-group mr-4">
    <label class="control-label mr-2 text-primary">Día</label>
    {{ form_widget(form.date,
           {'attr' : {'class' : 'form-control datepicker-here'}}
    )}}
  </div>
  &nbsp;
  <div class="text-right">
    <input type="submit" class="btn btn-primary" value="Filtrar" />
  </div>
  <br />
</div>
{{ form_end(form) }}
<br />
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="row">
      <div class="col-md-6">
        <h3 class="m-0 text-primary">
          Reporte Diario
        </h3>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="table-reponsive">
      <table
        class="table text-center"
        id="dataTable"
        width="100%"
        cellspacing="0"
        style="font-size: 0.85rem;"
      >
        <thead>
          <tr>
            <th>No Ruta</th>
            <th>Salida</th>
            <th>Destino</th>
            <th>Frecuencia</th>
            <th>Recaudación/lts</th>
            <th>Recaudación/viajes</th>
            <th>Pasajeros/viajes</th>
            <th>Kms/lts</th>
            <th>Aprov. Capacidad</th>
          </tr>
        </thead>
        <tbody>
          {% for reporte in reportes %}
          <tr>
            <td>{{ reporte.noruta }}</td>
            <td>{{ reporte.salida }}</td>
            <td>{{ reporte.destino }}</td>
            <td>{{ reporte.frecuencia }}</td>
            <td>{{ reporte.recaudacion_lt }}</td>
            <td>{{ reporte.recaudacion_viajes }}</td>
            <td>{{ reporte.pasajeros_viajes }}</td>
            <td>{{ reporte.kilometros_lt }}</td>
            <td>{{ reporte.aprov_cap }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
