{% extends 'index.html.twig' %} {% block contenido %}
<br />
<div class="card shadowr">
  <div class="card-header py-3">
    <div class="row">
      <div class="col-md-6">
        <h3 class="m-0 text-primary">
          Reporte de Incidencias por Ruta y Ómnibus
        </h3>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="table-reponsive">
      <table
        class="table text-center"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>Ruta</th>
            <th>Ómnibus</th>
            <th>Servicio</th>
            <th>Chofer</th>
            <th>Total Incidencias</th>
            <th>
              <img
                src="{{ asset('assets/dist/img/data_configuration_26px.png') }}"
                alt="User Image"
              />
              Acciones
            </th>
          </tr>
        </thead>
        <tbody>
          {% for reporte in reportes %}
          <tr>
            <td>{{ reporte.noruta }}</td>
            <td>{{ reporte.noomnibus }}</td>
            <td>{{ reporte.tipo }}</td>
            <td>{{ reporte.nombre }}</td>
            <td>{{ reporte.count }}</td>
            <td>
              <ul>
                <a
                  href="{{ path('ruta_reporte_show', { id: reporte.idhr }) }}"
                  class="text-secondary"
                  data-tooltip="Visualizar"
                  data-tooltip-location="top"
                  ><i class="fas fa-eye"></i>
                </a>
              </ul>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
